        public void Dispose()
        {
            Quit();

            if (testAuthor != null && reportingEnabled)
            {
                testAuthor.SaveReport();
            }

            if (testAuthor != null)
            {
                testAuthor.Dispose();
            }

            if (BugCreator != null)
                BugCreator.Dispose();
        }

        public bool WaitForURLChange(string urlSnippet, int waitSeconds = 20)
        {
            bool result = false;

            for (int i = 0; i <= (waitSeconds *2); i++)
            {
                if (CurrentFormName_OrURL.Contains(urlSnippet))
                {
                    result = true;
                    break;
                }

                Pause(500);
            }

            return result;
        }

